@source $__fxcrd_PATH/include/namespace @@

@namespace

@function _prepend
  if [ -z "$1" ]; then
    echo "$2"
  else
    echo "$2:$1"
  fi
@end

@function prepend
  eval "export $1=\$($_prepend \"\$$1\" \"$2\")"
@end

local PREFIX="$HOME/Prefix"

$prepend PATH "$PREFIX/bin"

$prepend PKG_CONFIG_PATH "$PREFIX/share/pkgconfig:$PREFIX/lib/pkgconfig"

$prepend LIBRARY_PATH    "$PREFIX/lib"
$prepend LD_LIBRARY_PATH "$PREFIX/lib"
$prepend CPATH           "$PREFIX/include"

$prepend PERL5LIB "$PREFIX/share/perl/5.22.1"

$prepend MANPATH ":$PREFIX/share/man"

export SBCL_HOME="$PREFIX/lib/sbcl"

export _PATHS_MODIFIED="true"


@end

